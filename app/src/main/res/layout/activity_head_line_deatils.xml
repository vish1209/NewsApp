<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_height="match_parent">

        <ImageView
            android:id="@+id/detail_headline_view_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="20dp"
            android:src="@drawable/icon_app"/>
        <TextView
            android:id="@+id/detail_headline_view_headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Your Text Here"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/detail_headline_view_description"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:text="description"
            android:layout_below="@id/detail_headline_view_headline"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_read_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="read more.."
            android:layout_below="@id/detail_headline_view_description"
            android:textColor="@color/light_blue"
            android:layout_marginLeft="20dp"/>
</RelativeLayout>
